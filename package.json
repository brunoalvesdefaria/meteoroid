    "schema",
    "validation"
  ],
  "homepage": "https://github.com/brunoalvesdefaria/meteoroid#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brunoalvesdefaria/meteoroid.git"
  },
  "bugs": {
    "url": "https://github.com/brunoalvesdefaria/meteoroid/issues"
  },
  "main": "src/main.js",
  "dependencies": {},
  "devDependencies": {
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^7.3.0",
    "eslint": "^3.11.1"
  },
  "scripts": {
    "test": "spacejam test-packages ./ --driver-package=practicalmeteor:mocha-console-runner",
    "test-manual": "meteor test-packages ./ --driver-package practicalmeteor:mocha",
    "lint": "eslint src/**.js tests/**.js",
    "dist": "browserify src/main.js -o dist/meteoroid.js"
